@model App.Models.EnvironmentalIncident

@{
    ViewData["Title"] = "Delete Incident";
}

<h1>Delete Incident</h1>

<h3>Are you sure you want to delete this incident?</h3>
<div>
    <h4>Incident Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Model.Title</dd>

        <dt>Description</dt>
        <dd>@Model.Description</dd>

        <dt>Location</dt>
        <dd>@Model.Location</dd>

        <dt>Type</dt>
        <dd>@Model.Type</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>
    </dl>

    <form asp-action="DeleteIncident" method="post">
        <input type="hidden" asp-for="IncidentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ManageIncidents" class="btn btn-secondary">Cancel</a>
    </form>
</div>
