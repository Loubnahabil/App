@model App.Models.EnvironmentalIncident

@{
    ViewData["Title"] = "Delete Incident";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this incident?</h3>
<div>
    <h4>Incident</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <!-- Display other properties as needed -->
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="IncidentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ManageIncidents" class="btn btn-secondary">Cancel</a>
    </form>
</div>
