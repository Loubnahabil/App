@model App.Models.EnvironmentalIncident

@{
    ViewData["Title"] = "Delete Report";
}

<h2>Delete Report</h2>
<h3>Are you sure you want to delete this report?</h3>

<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateReported)
        </dt>
        <dd class="col-sm-10">
            @Model.DateReported.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Model.Status.ToString()
        </dd>
    </dl>

    <form asp-action="DeleteReportConfirmed" method="post">
        <input type="hidden" asp-for="IncidentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "ViewReports", null, new { @class = "btn btn-secondary" })
    </form>
</div>
