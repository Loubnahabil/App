@model IEnumerable<App.Models.EnvironmentalIncident>

<h2>My Reported Incidents</h2>

@if (!Model.Any())
{
    <p>No incidents reported.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Date Reported</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var incident in Model)
            {
                <tr>
                    <td>@incident.Title</td>
                    <td>@incident.Description</td>
                    <td>@incident.Status.ToString()</td>
                    <td>@incident.DateReported.ToString("d")</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Incidents", new { id = incident.IncidentId }, new { @class = "link-class" }) <!-- Updated class -->
                        @Html.ActionLink("Delete", "Delete", "Incidents", new { id = incident.IncidentId }, new { @class = "link-class", onclick = "return confirm('Are you sure you want to delete this report?');" }) <!-- Updated class -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
