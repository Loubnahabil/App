@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2>Thank You!</h2>
                </div>
                <div class="card-body">
                    <p>Your report has been submitted successfully.</p>
                    <p>We appreciate your contribution to helping us maintain a safe and healthy environment. A local authority will review your report and take the necessary actions.</p>
                    <p>If you provided contact information, we may reach out to you for further details if needed.</p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
